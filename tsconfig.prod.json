{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */
    "strict": true,
    "declaration": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "baseUrl": ".",                             /* Skip type checking all .d.ts files. */
  },
  "include": ["src", "*.ts", "docs"],
  "exclude": [
    "./commitlint.config.js", 
    "./rollup.config.mjs", 
    "node_modules", 
    ".eslintrc.cjs",
    "es",
    "libs"
  ]
}
